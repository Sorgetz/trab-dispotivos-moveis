<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Estas permissões permitem que o app acesse o hardware do celular -->

    <!-- Acesso à câmera para tirar fotos e gravar vídeos -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- Acesso ao microfone para gravar áudio nos vídeos -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>


    <!-- Declara que o app pode usar câmera, mas não é obrigatório ter -->
    <!-- (isso permite que o app funcione em dispositivos sem câmera) -->
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
</manifest>
